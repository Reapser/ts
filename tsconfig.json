{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./assets/js",
    "rootDir": "./src/ts",
    "skipLibCheck": true
  },
  "include": [
    "src/ts/**/*"
  ]
}